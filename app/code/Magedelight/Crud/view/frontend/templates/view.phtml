<?php /** @var Magedelight\Crud\Block\Article $block */ ?>
<?php $articleCollection = $block->getCollection(); ?>
<?php if (count($articleCollection)) { ?>
    <div class="article-grid">
        <?php foreach($articleCollection as $article): ?>
            <div class="article-item">
                <h3 class="article-title">

                    <a href="<?php echo $block->getUrl('crud/index/view', ['id' => $article->getId()]); ?>">
                        <?php echo $article->getTitle(); ?>
                    </a>
                </h3> 
                <div class="article-meta">
                    <span class="article-date">
                        <?php echo date('F j, Y', strtotime($article->getCreatedAt())); ?>
                    </span>
                </div>
                <div class="article-content">
                    <p><?php echo $article->getContent(); ?></p>
                </div>
            </div> 
        <?php endforeach; ?> 
    </div>
<?php } ?>
